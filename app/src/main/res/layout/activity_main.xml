<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="23dp"
    android:background="@color/colorPrimary"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/selectNameTW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz swoje imię"
        android:textAlignment="center"
        android:padding="20dp"

        android:textSize="20dp"


        android:layout_alignParentTop="true"/>

    <Spinner
        android:layout_below="@+id/selectNameTW"
        android:id="@+id/spinner"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/spinner"
        android:id="@+id/randomBtn"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random" />

    <TextView
        android:layout_below="@id/randomBtn"
        android:id="@+id/resultTW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20dp"

        android:textAlignment="center"
        android:layout_margin="40dp"/>

    <Button
        android:layout_below="@id/resultTW"
        android:id="@+id/saveBtn"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"

        />

    <ImageButton
        android:id="@+id/imageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectNameTW"
        android:layout_marginStart="290dp"

        android:layout_marginLeft="290dp"
        android:layout_marginTop="-281dp"
        android:layout_marginBottom="-470dp"
        android:background="@android:color/transparent"
        android:onClick="syncMethod"
        app:srcCompat="@android:drawable/ic_popup_sync" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:text="W razie nieaktualnych danych, problemów ->"
        />
</RelativeLayout>